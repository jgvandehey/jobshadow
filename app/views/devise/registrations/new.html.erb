<div class="sign-up-header">
<div id="form-box">
<h1><strong>Welcome.</strong></h1>
<br>
      <button class="btn btn-primary" style="width: 280px; font-size: 26px; background-color:#41C8F5; border: none" onclick=window.location='/users/auth/twitter'><strong>Sign Up with Twitter</strong></button>
      <h2>OR</h2>
      <br>
<div class="form-inputs">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<div class="error"><%= devise_error_messages! %></div>
  <%= f.text_field :email, :autofocus => true, placeholder: "Email", class: "form" %>
  <br>
  <%= f.text_field :username, :autofocus => true, placeholder: "Username", class: "form" %>
  <br>
  <% if f.object.password_required? %>
  <%= f.password_field :password, :required => true, placeholder: "Password", class: "form" %>
  <br>
  <%= f.password_field :password_confirmation, :required => true, placeholder: "Confirm password", class: "form" %>
  <% end %>
</div>

<div class="form-actions">
  <%= f.submit "Sign up", class: "btn-primary", style: "font-size: 26px; width: 280px; border-radius: 3px; border: none; font-weight: bolder" %>
</div>
<% end %>

<!-- <%= render "devise/shared/links" %> -->
</div>

</div>